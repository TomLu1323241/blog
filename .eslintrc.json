{
  "extends": "next/core-web-vitals",
  "rules": {
    "semi": [2, "always"],
    "@next/next/no-img-element": "off",
    "react/no-unescaped-entities": "off",
    "jsx-a11y/alt-text": "off",
    "quotes": [
      "error",
      "single",
      {
        "allowTemplateLiterals": true
      }
    ],
    "jsx-quotes": ["error", "prefer-single"]
  }
}
